{
  "name": "@lumina/core",
  "version": "0.0.1",
  "description": "Lumina package",
  "author": "",
  "license": "ISC",
  "exports": {
    ".": {
      "import": "./dist/main.js"
    },
    "./style.css": "./dist/css/index.css",
    "./src/*": "./src/*"
  },
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "npm run build && watch -p \"src/**/*\" -c \"npm run build\"",
    "build": "npm run build:theme && npm run build:js && npm run build:css",
    "build:theme": "node ./src/styles/theme/build.js",
    "build:js": "tsc && tsc-alias",
    "build:css": "sass src/styles/index.scss dist/css/index.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src --fix --report-unused-disable-directives --max-warnings 10",
    "lint:css": "stylelint --fix \"**/*.{css,scss}\" --config ../../.stylelintrc.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/react": "^18.3.3",
    "@types/react-modal": "^3.16.3",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.8.0",
    "husky": "^9.1.4",
    "i": "^0.3.7",
    "lint-staged": "^15.2.7",
    "npm": "^10.8.2",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "style-dictionary": "^4.0.1",
    "stylelint": "^16.8.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript-eslint": "^7.18.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "react-form-component": "^2.6.6",
    "react-hook-form": "^7.52.2",
    "react-modal": "^3.16.1",
    "react-select": "^5.8.0",
    "sass": "^1.77.8",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "use-debounce": "^10.0.3",
    "watch-cli": "^0.2.3"
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write"
    ],
    "!(*.scss|*.css|*.js|*.jsx|*.ts|*.tsx)": [
      "prettier --write"
    ]
  }
}
